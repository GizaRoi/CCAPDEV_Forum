{{> header}}

<div class="body">
    {{> sidebar_left}}
    <div class="container">
        <div class="top-body">
            <!-- User Results -->
            <div class="search-results">
                <h2>Users</h2>
                {{#if users.length}}
                    <div class="user-results">
                        {{#each users}}
                            <div class="user-card">
                                <div class="user-info">
                                    <div class="user-pfp">
                                        <img src="./images/{{profilePicture}}" alt="{{username}}'s Profile Picture"/>
                                    </div>
                                    <div class="user-details" >
                                        <a href="/profile/{{_id}}" class="user-username">@{{username}}</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <p>No users found.</p>
                {{/if}}
            </div>

            
            </div>
        </div>  
    </div>
    {{> sidebar_right}}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
