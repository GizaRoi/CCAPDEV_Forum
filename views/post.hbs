        <div class="top-body">
            <div class="post-container">
                <a href="home.html"><span class="return"><ion-icon name="return-up-back-outline"></ion-icon></span></a>
                <div class="post-header">
                    <div class="op-pfp"><img id="pfp5" src="{{post.roomImage}}"/></div>
                    <div class="post-info">
                        <div class="op-username">by <a href="profile.html">@{{post.author}}</a> • {{post.date}}</div>
                        <div class="room">
                            <img id="fr1" src="{{post.roomImage}}"/>
                            <span class="roomname">{{post.roomName}}</span>
                        </div>
                    </div>
                </div>
                <div class="post-content">
                    <div class="post-title">{{post.title}}</div>
                    <div class="post-content">{{post.content}}</div>
                </div>
                <div class="post-footer">
                    <div class="votes">
                        <ion-icon name="chevron-up-outline"></ion-icon> <span class="upvote">{{post.upvotes}}</span>
                        <ion-icon name="chevron-down-outline"></ion-icon> <span class="downvote">{{post.downvotes}}</span>
                    </div>
                    <div class="replies">
                        <ion-icon name="chatbubble-ellipses-outline"></ion-icon> <span class="reply-count">{{post.replies}}</span>
                    </div>
                </div>
            </div>

            <div class="replies-container">
                <h3>Replies</h3>
                {{#each replies}}
                <div class="reply">
                    <div class="reply-header">
                        <div class="reply-pfp"><img src="{{profilePic}}"/></div>
                        <div class="reply-info">
                            <div class="reply-author">by <a href="profile.html">@{{author}}</a> • {{date}}</div>
                        </div>
                    </div>
                    <div class="reply-content">
                        <div class="reply-text">{{content}}</div>
                    </div>
                    <div class="reply-footer">
                        <div class="votes">
                            <ion-icon name="chevron-up-outline"></ion-icon> <span class="upvote">{{upvotes}}</span>
                            <ion-icon name="chevron-down-outline"></ion-icon> <span class="downvote">{{downvotes}}</span>
                        </div>
                        <div class="replies">
                            <ion-icon name="chatbubble-ellipses-outline"></ion-icon> <span class="reply-count">{{replies}}</span>
                        </div>
                    </div>
                    {{#if children}}
                    <div class="child-replies">
                        {{#each children}}
                        <div class="child-reply">
                            <div class="reply-header">
                                <div class="reply-pfp"><img src="{{profilePic}}"/></div>
                                <div class="reply-info">
                                    <div class="reply-author">by <a href="profile.html">@{{author}}</a> • {{date}}</div>
