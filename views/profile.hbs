<div class="container">
        <a href="/home"><span class="return"><ion-icon name="return-up-back-outline"></ion-icon></span></a>
        <div class="post-header">
            <header class="header">
                <h1>Profile</h1>
            </header>
            <main>
                <section class="profile">
                    <div class="profile-header">
                        <img src="{{profilepicture}}" class="profile-pic" alt="Profile Picture">
                        <div class="profile-info">
                            <h2>{{username}}</h2>
                            <span class="followers">{{followers}}</span>
                            <p class="bio">{{bio}}</p>
                        </div>
                        <button id="edit-profile-button"><ion-icon name="create-outline"></ion-icon></button>
                    </div>
                </section>
                <section class="posts">
                    <h3>Posts</h3>
                    <div class="post">
                        <span style="font-size: large;"> <a href="post.html">{{title}}</a></span>
                        <span style="color:rgba(103, 99, 103, 0.93)">June 4, 2024</span>
                        <p>{{description}}</p>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <div id="edit-profile-modal" class="modal" href="/editprofile">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <form action="/editprofile" method="POST" enctype="multipart/form-data">
                <h2>Edit Profile</h2>
                <label for="profile-picture">Profile Picture</label>
                <input type="file" id="profile-picture" name="profile-picture">
                
                <label for="profile-description">Description</label>
                <textarea id="profile-description" name="profile-description" rows="3"></textarea>
                
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('edit-profile-button').addEventListener('click', function() {
            document.getElementById('edit-profile-modal').style.display = 'flex';
        });

        document.querySelector('.close-button').addEventListener('click', function() {
            document.getElementById('edit-profile-modal').style.display = 'none';
        });

        window.addEventListener('click', function(event) {
            if (event.target === document.getElementById('edit-profile-modal')) {
                document.getElementById('edit-profile-modal').style.display = 'none';
            }
        });
    </script>

