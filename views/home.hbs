       {{>header}}

<div class="body">
{{>sidebar_left}}
    <div class="container">
            <div class="top-body">
                {{#each posts}}
                <button type="button" class="btn post-container">
                    <div class="lineh"></div>
                    <a href="/profile"></a>
                    <div class="post-header">
                        <div class="op-pfp"><img id="pfp5" src="{{userImage}}"/></div>
                        <div class="post-info">
                            <div class="op-username">by <a href="/profile">{{user}}</a> â€¢ {{date}}</div>
                            <div class="room">
                                <img id="fr1" src="{{roomImage}}"/>
                                <span class="roomname">{{room}}</span>
                            </div>
                        </div>
                    </div>
                <div class="post-content">
                    <a href="post.html" style="text-decoration: none;">
                    <div class="post-title">{{title}}</div>
                    <div class="post-content">{{description}}</div>
                </div>
                    <div class="post-footer">
                        <div class="votes">
                            <ion-icon name="chevron-up-outline"></ion-icon> <span class="upvote">{{upvote}}</span>
                            <ion-icon name="chevron-down-outline"></ion-icon> <span class="downvote">{{downvote}}</span>
                            <ion-icon name="chatbubble-outline"></ion-icon><span class="replynum">{{replynum}}</span>
                        </div>
                    </div>
                
                </button>
                {{/each}}                     
            </div>  
            </div>
         {{>sidebar_right}}
        </div>
   
