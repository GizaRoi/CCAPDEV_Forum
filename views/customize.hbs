<body>
    <div class="wrapper">
        <span class="close-button">
            <a href="/"><ion-icon name="close-outline"></ion-icon></a>
        </span>

        <div class="form-box">
            <div class="welcome-msg">
                <h3>Welcome to FoRoom, @{{username}}</h3>
                <h5>Customize your account so your roomies know it's you.</h5>
            </div>

            <form action="/customize" method="POST" class="input-group">
                <input type="hidden" name="username" value="{{username}}">

                <div class="upload-photo">
                    <label for="profilepicture">Profile Picture URL</label>
                    <input type="text" id="profilepicture" name="profilepicture" class="input-field" placeholder="Profile Picture URL">
                
                </div>

                <div class="centered-text">
                    <span>or you can choose from these avatars!</span>
                </div>
                <div class="prof-images">
                    <img src="images/prof-1.png" alt="Profile 1" class="selectable">
                    <img src="images/prof-2.png" alt="Profile 2" class="selectable">
                    <img src="images/prof-3.png" alt="Profile 3" class="selectable">
                    <img src="images/prof-4.png" alt="Profile 4" class="selectable">
                    <img src="images/prof-5.png" alt="Profile 5" class="selectable">
                </div>

                <div class="bio-box">
                    <label for="bio">Add Bio</label>
                    <textarea id="bio" name="bio" placeholder="Write something about yourself..."></textarea>
                </div>

                <div class="next-button">
                    <button type="submit">Continue</button>
                </div>
            </form>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    
    <script>
document.querySelectorAll('.selectable').forEach(img => {
    img.addEventListener('click', function() {
        const filename = this.src.split('/').pop();
        console.log('Selected filename:', filename); // Debugging line
        document.getElementById('profilepicture').value = filename;
        document.querySelectorAll('.selectable').forEach(el => el.classList.remove('selected'));
        this.classList.add('selected');
    });
});

</script>

    
    <style>
        .selectable {
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s;
        }
        
        .selectable.selected {
            border-color: var(--accent-color);
        }
    </style>
</body>
